# SCOUT Backend Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://scout:scout_dev_password@localhost:5432/scout
POSTGRES_DB=scout
POSTGRES_USER=scout
POSTGRES_PASSWORD=scout_dev_password
POSTGRES_PORT=5432

# API Configuration
API_PORT=8000
API_HOST=0.0.0.0
API_WORKERS=1

# Data Storage
DATA_ROOT=./data
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=pdf,doc,docx,txt

# Security
ENCRYPTION_KEY=change_me_32_chars_long_key_here
SECRET_KEY=your_secret_key_here_make_it_long_and_random
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/scout.log

# Vector Embeddings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# MinIO (Optional - only if using object storage)
MINIO_ENDPOINT=localhost:9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_BUCKET_NAME=scout-artifacts

# Development Settings
DEBUG=true
ENVIRONMENT=development
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Health Check
HEALTH_CHECK_INTERVAL=30

# PII Protection
PII_REDACTION_ENABLED=true
PII_PATTERNS_FILE=./config/pii_patterns.json