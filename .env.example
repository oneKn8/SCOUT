# SCOUT Frontend Environment Configuration

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_VERSION=v1

# Application Configuration
NEXT_PUBLIC_APP_NAME=SCOUT
NEXT_PUBLIC_APP_VERSION=0.1.0
NEXT_PUBLIC_ENVIRONMENT=development

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here_make_it_long

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=10485760  # 10MB in bytes
NEXT_PUBLIC_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.txt
NEXT_PUBLIC_MAX_FILES_PER_UPLOAD=5

# UI Configuration
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_THEME_TOGGLE_ENABLED=true

# Privacy & Analytics
NEXT_PUBLIC_ANALYTICS_ENABLED=false
NEXT_PUBLIC_TELEMETRY_ENABLED=false
NEXT_PUBLIC_ERROR_REPORTING_ENABLED=false

# Development Settings
NEXT_PUBLIC_DEBUG=true
NEXT_PUBLIC_SHOW_DEV_TOOLS=true

# Local Storage Keys
NEXT_PUBLIC_STORAGE_PREFIX=scout_

# Toast Notifications
NEXT_PUBLIC_TOAST_DURATION=5000
NEXT_PUBLIC_TOAST_POSITION=top-right

# Accessibility
NEXT_PUBLIC_A11Y_ENABLED=true
NEXT_PUBLIC_HIGH_CONTRAST_MODE=false
NEXT_PUBLIC_REDUCED_MOTION=false

# Performance
NEXT_PUBLIC_LAZY_LOADING=true
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true

# Security Headers (handled in next.config.js)
NEXT_PUBLIC_CSP_ENABLED=true

# Feature Flags
NEXT_PUBLIC_FEATURE_RESUME_TEMPLATES=true
NEXT_PUBLIC_FEATURE_EXPORT_FORMATS=true
NEXT_PUBLIC_FEATURE_COLLABORATION=false
NEXT_PUBLIC_FEATURE_AI_SUGGESTIONS=false